Config { font = "xft:Hack:size=9:bold:antialias=true"
       -- font = "-misc-fixed-*-*-*-*-10-*-*-*-*-*-*-*"
       , additionalFonts = [ "xft:FontAwesome:pixelsize=13:antialias=true:hinting=true" ]
       , borderColor = "black"
       , border = TopB
       , bgColor = "black"
       , fgColor = "darkgrey"
       , alpha = 200
       , position = Top
       , textOffset = -1
       , iconOffset = -1
       , lowerOnStart = True
       , pickBroadest = False
       , persistent = False
       , hideOnStart = False
       , iconRoot = "."
       , allDesktops = True
       , overrideRedirect = True
       , commands = [ Run Wireless "wlp2s0" ["-t","<essid>",
                                          "--normal","green","--high","red"] 10
                    , Run Cpu ["-t", "<fn=1></fn> <total>%", "-L","3","-H","50"] 10
                    , Run Memory ["-t"," <usedratio>%"] 10
                    , Run Swap [] 10
                    , Run Volume "default" "Master" [ "--template", "<fn=1></fn> <volume>%" ] 10
                    , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                    , Run Battery        [
                               "--template" , "<acstatus>"
                             , "-L" , "25"        -- units: %
                             , "-H" , "75"        -- units: %
                             , "-l" , "darkred"
                             , "--" -- battery specific options
                                       , "-o"	        , "<left>%"      -- discharging status
                                       , "-O"	        , "<fn=1></fn>" -- AC "on" status
                                       , "-i"         , "<fn=1></fn>" -- charged status
                                       , "-L"         , "25"           -- units: %
                                       , "-H"         , "75"           -- units: %
                                       , "--highs"    , "<fn=1> </fn>"
                                       , "--mediums"  , "<fn=1> </fn>"
                                       , "--lows"     , "<fn=1> </fn>"
                             ] 50
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "<fn=1></fn> %wlp2s0wi%  %cpu%}%StdinReader%{<fn=1></fn> %date%  %default:Master%  %battery%"
       }
